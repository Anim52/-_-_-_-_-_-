<Application x:Class="MaxiMed.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MaxiMed.Wpf"
             xmlns:converters="clr-namespace:MaxiMed.Wpf.Converters"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <ResourceDictionary Source="/Resources/Theme/ThemeAccentBlue.xaml"/>

                <ResourceDictionary Source="/Resources/Theme/ThemeLight.xaml"/>

                <ResourceDictionary Source="/Resources/Theme/Controls.xaml"/>

            </ResourceDictionary.MergedDictionaries>

            <converters:BoolToFreeBusyBrushConverter x:Key="BoolToFreeBusyBrush"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
            
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
