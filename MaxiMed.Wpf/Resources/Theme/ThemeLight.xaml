<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Color x:Key="BgColor">#FFF6F7FB</Color>
	<Color x:Key="CardColor">#FFFFFFFF</Color>
	<Color x:Key="BorderColor">#FFE2E8F0</Color>
	<Color x:Key="TextPrimaryColor">#FF0F172A</Color>
	<Color x:Key="TextSecondaryColor">#FF475569</Color>


	<SolidColorBrush x:Key="BgBrush" Color="{StaticResource BgColor}"/>
	<SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
	<SolidColorBrush x:Key="BorderBrushHard" Color="{StaticResource BorderColor}"/>
	<SolidColorBrush x:Key="TextPrimary" Color="{StaticResource TextPrimaryColor}"/>
	<SolidColorBrush x:Key="TextSecondary" Color="{StaticResource TextSecondaryColor}"/>
	<SolidColorBrush x:Key="NavActiveBg" Color="#FFEFF6FF"/>
	<SolidColorBrush x:Key="NavActiveFg" Color="#FF1D4ED8"/>
	<SolidColorBrush x:Key="NavHoverBg" Color="#FFF1F5F9"/>

	<Color x:Key="SidebarColor">#FFFFFFFF</Color>
	<SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}"/>


	<!-- Inputs -->
	<SolidColorBrush x:Key="ControlBg" Color="#FFFFFFFF"/>
	<SolidColorBrush x:Key="ControlBgHover" Color="#FFF1F5F9"/>
</ResourceDictionary>
