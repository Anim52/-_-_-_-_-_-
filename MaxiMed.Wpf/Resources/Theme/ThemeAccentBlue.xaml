<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Color x:Key="AccentColor">#FF3B82F6</Color>
	<SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
	<SolidColorBrush x:Key="AccentBrushHover" Color="#FF2563EB"/>
	<Color x:Key="AccentHoverColor">#FF1D4ED8</Color>

	<!-- Полупрозрачный акцент для заливок/подсветок -->
	<Color x:Key="AccentSoftColor">#332563EB</Color>
	<!-- 0x33 = ~20% -->

	<SolidColorBrush x:Key="AccentSoftBrush" Color="{StaticResource AccentSoftColor}"/>
</ResourceDictionary>
