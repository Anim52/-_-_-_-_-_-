<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- ===== LIGHT THEME ===== -->
  <Color x:Key="BgColor">#FFF6F7FB</Color>
  <Color x:Key="CardColor">#FFFFFFFF</Color>
  <Color x:Key="BorderColor">#FFE2E8F0</Color>

  <Color x:Key="TextPrimaryColor">#FF0F172A</Color>
  <Color x:Key="TextSecondaryColor">#FF64748B</Color>
  <Color x:Key="TextMutedColor">#FF94A3B8</Color>

  <Color x:Key="ControlBgColor">#FFFFFFFF</Color>
  <Color x:Key="ControlBgHoverColor">#FFF1F5F9</Color>

  <Color x:Key="SidebarColor">#FFFFFFFF</Color>

  <!-- Navigation states -->
  <Color x:Key="NavHoverBgColor">#0B000000</Color>
  <Color x:Key="NavActiveBgColor">#12000000</Color>

  <!-- Brushes -->
  <SolidColorBrush x:Key="BgBrush" Color="{StaticResource BgColor}"/>
  <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
  <SolidColorBrush x:Key="BorderBrushHard" Color="{StaticResource BorderColor}"/>

  <SolidColorBrush x:Key="TextPrimary" Color="{StaticResource TextPrimaryColor}"/>
  <SolidColorBrush x:Key="TextSecondary" Color="{StaticResource TextSecondaryColor}"/>
  <SolidColorBrush x:Key="TextMuted" Color="{StaticResource TextMutedColor}"/>

  <SolidColorBrush x:Key="ControlBg" Color="{StaticResource ControlBgColor}"/>
  <SolidColorBrush x:Key="ControlBgHover" Color="{StaticResource ControlBgHoverColor}"/>

  <SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}"/>

  <SolidColorBrush x:Key="NavHoverBg" Color="{StaticResource NavHoverBgColor}"/>
  <SolidColorBrush x:Key="NavActiveBg" Color="{StaticResource NavActiveBgColor}"/>

  <!-- Status / warnings -->
  <Color x:Key="DangerBgColor">#22DC2626</Color>
  <Color x:Key="DangerBorderColor">#55DC2626</Color>
  <Color x:Key="DangerTextColor">#FFFEE2E2</Color>
  <SolidColorBrush x:Key="DangerBg" Color="{StaticResource DangerBgColor}"/>
  <SolidColorBrush x:Key="DangerBorder" Color="{StaticResource DangerBorderColor}"/>
  <SolidColorBrush x:Key="DangerText" Color="{StaticResource DangerTextColor}"/>

</ResourceDictionary>
