<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- ===== ACCENT: BLUE ===== -->
  <Color x:Key="AccentColor">#FF3B82F6</Color>
  <Color x:Key="AccentHoverColor">#FF2563EB</Color>
  <Color x:Key="AccentSoftColor">#223B82F6</Color>

  <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
  <SolidColorBrush x:Key="AccentBrushHover" Color="{StaticResource AccentHoverColor}"/>
  <SolidColorBrush x:Key="AccentSoftBrush" Color="{StaticResource AccentSoftColor}"/>

</ResourceDictionary>
