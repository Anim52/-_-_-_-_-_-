<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- ===== ACCENT: GREEN ===== -->
  <Color x:Key="AccentColor">#FF22C55E</Color>
  <Color x:Key="AccentHoverColor">#FF16A34A</Color>
  <Color x:Key="AccentSoftColor">#2222C55E</Color>

  <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
  <SolidColorBrush x:Key="AccentBrushHover" Color="{StaticResource AccentHoverColor}"/>
  <SolidColorBrush x:Key="AccentSoftBrush" Color="{StaticResource AccentSoftColor}"/>

</ResourceDictionary>
