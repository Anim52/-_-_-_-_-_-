<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="AccentColor">#FF8B5CF6</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentBrushHover" Color="#FF7C3AED"/>
    <Color x:Key="AccentHoverColor">#FF6D28D9</Color>

    <Color x:Key="AccentSoftColor">#337C3AED</Color>
    <SolidColorBrush x:Key="AccentSoftBrush" Color="{StaticResource AccentSoftColor}"/>
</ResourceDictionary>
