<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Color x:Key="BgColor">#FF1E1F22</Color>
	<!-- фон приложения -->
	<Color x:Key="SidebarColor">#FF2B2D31</Color>
	<!-- левый сайдбар -->
	<Color x:Key="CardColor">#FF313338</Color>
	<!-- карточки/панели -->
	<Color x:Key="BorderColor">#FF3A3C41</Color>
	<!-- тонкая граница -->

	<Color x:Key="TextPrimaryColor">#FFF2F3F5</Color>
	<!-- основной текст -->
	<Color x:Key="TextSecondaryColor">#FFB5BAC1</Color>
	<!-- вторичный текст -->

	<!-- controls -->
	<Color x:Key="ControlBgColor">#FF2B2D31</Color>
	<Color x:Key="ControlHoverColor">#FF3A3C41</Color>

	<SolidColorBrush x:Key="BgBrush" Color="{StaticResource BgColor}"/>
	<SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}"/>
	<SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
	<SolidColorBrush x:Key="BorderBrushHard" Color="{StaticResource BorderColor}"/>

	<SolidColorBrush x:Key="TextPrimary" Color="{StaticResource TextPrimaryColor}"/>
	<SolidColorBrush x:Key="TextSecondary" Color="{StaticResource TextSecondaryColor}"/>

	<SolidColorBrush x:Key="ControlBg" Color="{StaticResource ControlBgColor}"/>
	<SolidColorBrush x:Key="ControlBgHover" Color="{StaticResource ControlHoverColor}"/>

	<!-- Nav -->
	<SolidColorBrush x:Key="NavHoverBg" Color="#FF3A3C41"/>
</ResourceDictionary>
