<Page x:Class="MaxiMed.Wpf.Views.Appointments.FreeSlotsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaxiMed.Wpf.Views.Appointments"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
     Title="Поиск свободного времени"
      Background="Transparent">

    <Page.Resources>
        <!-- Цвета -->
        <Color x:Key="C_Primary">#2563EB</Color>
        <Color x:Key="C_PrimaryDark">#1D4ED8</Color>
        <Color x:Key="C_Text">#0F172A</Color>
        <Color x:Key="C_SubText">#64748B</Color>
        <Color x:Key="C_Border">#E2E8F0</Color>

        <SolidColorBrush x:Key="B_Primary" Color="{StaticResource C_Primary}"/>
        <SolidColorBrush x:Key="B_PrimaryDark" Color="{StaticResource C_PrimaryDark}"/>
        <SolidColorBrush x:Key="B_Text" Color="{StaticResource C_Text}"/>
        <SolidColorBrush x:Key="B_SubText" Color="{StaticResource C_SubText}"/>
        <SolidColorBrush x:Key="B_Border" Color="{StaticResource C_Border}"/>

        <DropShadowEffect x:Key="E_CardShadow"
                          BlurRadius="26"
                          ShadowDepth="8"
                          Opacity="0.12"/>

        <!-- Карточка -->
        <Style x:Key="S_Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="#10E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource E_CardShadow}"/>
        </Style>

        <!-- Лейбл -->
        <Style x:Key="S_FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource B_SubText}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- ComboBox -->
        <Style x:Key="S_ComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
        </Style>

        <!-- DatePicker -->
        <Style x:Key="S_DatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="6,0"/>
        </Style>

        <!-- Кнопки -->
        <Style x:Key="S_ButtonPrimary" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource B_Primary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource B_PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="S_ButtonSecondary" TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0B000000"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Слот-карточка -->
        <Style x:Key="S_SlotItemBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#10E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Фильтры -->
        <Border Grid.Row="0" Style="{StaticResource S_Card}" Padding="14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Поиск свободного времени"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource B_Text}"/>
                    <TextBlock Text="Выберите специализацию, врача и период — покажем доступные слоты"
                               Foreground="{StaticResource B_SubText}"
                               FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Спец." Style="{StaticResource S_FieldLabel}"/>
                    <ComboBox Style="{StaticResource S_ComboBox}"
                              Width="220" Margin="0,0,10,0"
                              ItemsSource="{Binding Specialties}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedSpecialtyId}"/>

                    <TextBlock Text="Врач" Style="{StaticResource S_FieldLabel}"/>
                    <ComboBox Style="{StaticResource S_ComboBox}"
                              Width="260" Margin="0,0,10,0"
                              ItemsSource="{Binding Doctors}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedDoctorId}"/>

                    <TextBlock Text="С" Style="{StaticResource S_FieldLabel}"/>
                    <DatePicker Style="{StaticResource S_DatePicker}"
                                Width="150" Margin="0,0,10,0"
                                SelectedDate="{Binding FromDate}"/>

                    <TextBlock Text="По" Style="{StaticResource S_FieldLabel}"/>
                    <DatePicker Style="{StaticResource S_DatePicker}"
                                Width="150" Margin="0,0,10,0"
                                SelectedDate="{Binding ToDate}"/>

                    <Button Content="Найти"
                            Style="{StaticResource S_ButtonPrimary}"
                            Command="{Binding SearchCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Список слотов -->
        <Border Grid.Row="2" Style="{StaticResource S_Card}" Padding="14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0">
                    <TextBlock Text="Доступные слоты"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource B_Text}"
                               FontSize="14"/>
                    <TextBlock DockPanel.Dock="Right"
                               Text="Нажмите «Записать» чтобы создать запись"
                               Foreground="{StaticResource B_SubText}"
                               FontSize="12"/>
                </DockPanel>

                <ListView Grid.Row="2"
                          ItemsSource="{Binding Slots}"
                          BorderThickness="0"
                          Background="Transparent">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource S_SlotItemBorder}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- День -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Дата" Foreground="{StaticResource B_SubText}" FontSize="11"/>
                                        <TextBlock Text="{Binding Day}" Foreground="{StaticResource B_Text}" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <!-- Время -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Время" Foreground="{StaticResource B_SubText}" FontSize="11"/>
                                        <TextBlock Text="{Binding Time}" Foreground="{StaticResource B_Text}" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <!-- Подсказка -->
                                    <TextBlock Grid.Column="2"
                                               Text="Свободный слот"
                                               Foreground="{StaticResource B_SubText}"
                                               VerticalAlignment="Center"/>

                                    <!-- Кнопка -->
                                    <Button Grid.Column="3"
                                            Content="Записать"
                                            Style="{StaticResource S_ButtonSecondary}"
                                            Command="{Binding DataContext.CreateAppointmentCommand,
                                                              RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</Page>
