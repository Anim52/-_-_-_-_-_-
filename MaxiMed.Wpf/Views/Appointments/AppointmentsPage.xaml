<Page x:Class="MaxiMed.Wpf.Views.Appointments.AppointmentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaxiMed.Wpf.Views.Appointments"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Запись"
      Background="Transparent">

    <Page.Resources>
        <!-- Цвета -->
        <Color x:Key="C_Primary">#2563EB</Color>
        <Color x:Key="C_PrimaryDark">#1D4ED8</Color>
        <Color x:Key="C_Text">#0F172A</Color>
        <Color x:Key="C_SubText">#64748B</Color>
        <Color x:Key="C_Border">#E2E8F0</Color>

        <SolidColorBrush x:Key="B_Primary" Color="{StaticResource C_Primary}"/>
        <SolidColorBrush x:Key="B_PrimaryDark" Color="{StaticResource C_PrimaryDark}"/>
        <SolidColorBrush x:Key="B_Text" Color="{StaticResource C_Text}"/>
        <SolidColorBrush x:Key="B_SubText" Color="{StaticResource C_SubText}"/>
        <SolidColorBrush x:Key="B_Border" Color="{StaticResource C_Border}"/>

        <DropShadowEffect x:Key="E_CardShadow"
                          BlurRadius="26"
                          ShadowDepth="8"
                          Opacity="0.12"/>

        <!-- Карточка -->
        <Style x:Key="S_Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="#10E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource E_CardShadow}"/>
        </Style>

        <!-- Лейбл -->
        <Style x:Key="S_FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource B_SubText}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- TextBox (на будущее) -->
        <Style x:Key="S_TextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
        </Style>

        <!-- ComboBox -->
        <Style x:Key="S_ComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
        </Style>

        <!-- DatePicker -->
        <Style x:Key="S_DatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="6,0"/>
        </Style>

        <!-- Кнопки -->
        <Style x:Key="S_ButtonPrimary" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource B_Primary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource B_PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="S_ButtonSecondary" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0B000000"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="S_ButtonDanger" TargetType="Button" BasedOn="{StaticResource S_ButtonSecondary}">
            <Setter Property="Foreground" Value="#B91C1C"/>
            <Setter Property="BorderBrush" Value="#FECACA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#10DC2626"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1ADC2626"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid -->
        <Style x:Key="S_DataGrid" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FBFCFE"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="{StaticResource B_SubText}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <!-- Базовый RowStyle + ховер/выделение -->
        <Style x:Key="S_DataGridRowBase" TargetType="DataGridRow">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#0FE2E8F0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E8F0FF"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F5FF"/>
                </Trigger>

                <!-- Твои правила по статусам -->
                <DataTrigger Binding="{Binding Status}" Value="Completed">
                    <Setter Property="Opacity" Value="0.85"/>
                    <Setter Property="TextBlock.TextDecorations" Value="{x:Null}"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding Status}" Value="Canceled">
                    <Setter Property="Opacity" Value="0.55"/>
                    <Setter Property="TextBlock.TextDecorations" Value="Strikethrough"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка + фильтры + действия -->
        <Border Grid.Row="0" Style="{StaticResource S_Card}" Padding="14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Записи (день)" FontSize="20" FontWeight="Bold" Foreground="{StaticResource B_Text}"/>
                    <TextBlock Text="Фильтры по дате и врачу, создание и управление записью"
                               Foreground="{StaticResource B_SubText}"
                               FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Фильтры -->
                    <TextBlock Text="Дата" Style="{StaticResource S_FieldLabel}" Margin="0,0,6,0"/>
                    <DatePicker Style="{StaticResource S_DatePicker}"
                                SelectedDate="{Binding SelectedDate}"
                                Width="150"
                                Margin="0,0,10,0"/>

                    <TextBlock Text="Врач" Style="{StaticResource S_FieldLabel}" Margin="0,0,6,0"/>
                    <ComboBox Style="{StaticResource S_ComboBox}"
                              Width="260"
                              Margin="0,0,10,0"
                              ItemsSource="{Binding Doctors}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedDoctorId}"/>

                    <Button Content="Показать"
                            Style="{StaticResource S_ButtonPrimary}"
                            Margin="0,0,10,0"
                            Command="{Binding LoadCommand}"/>

                    <!-- Действия -->
                    <Button Content="Новая запись"
                            Style="{StaticResource S_ButtonSecondary}"
                            Margin="0,0,10,0"
                            Command="{Binding AddCommand}"/>

                    <Button Content="Редактировать"
                            Style="{StaticResource S_ButtonSecondary}"
                            Margin="0,0,10,0"
                            Command="{Binding EditCommand}"/>

                    <Button Content="Удалить"
                            Style="{StaticResource S_ButtonDanger}"
                            Margin="0,0,10,0"
                            Command="{Binding DeleteCommand}"/>

                    <Button Content="Завершить"
                            Style="{StaticResource S_ButtonSecondary}"
                            Margin="0,0,10,0"
                            Command="{Binding CompleteCommand}"/>

                    <Button Content="Отменить"
                            Style="{StaticResource S_ButtonSecondary}"
                            Command="{Binding CancelCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Таблица -->
        <Border Grid.Row="2" Style="{StaticResource S_Card}" Padding="0">
            <DataGrid Style="{StaticResource S_DataGrid}"
                      ItemsSource="{Binding Items}"
                      SelectedItem="{Binding Selected}">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource S_DataGridRowBase}"/>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Начало" Binding="{Binding StartAt, StringFormat=HH\\:mm}" Width="95"/>
                    <DataGridTextColumn Header="Конец"  Binding="{Binding EndAt, StringFormat=HH\\:mm}" Width="95"/>
                    <DataGridTextColumn Header="Пациент" Binding="{Binding PatientName}" Width="*"/>
                    <DataGridTextColumn Header="Врач" Binding="{Binding DoctorName}" Width="220"/>
                    <DataGridTextColumn Header="Филиал" Binding="{Binding BranchName}" Width="220"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="140"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
