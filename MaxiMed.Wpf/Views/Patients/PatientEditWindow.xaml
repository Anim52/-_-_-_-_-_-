<Window x:Class="MaxiMed.Wpf.Views.Patients.PatientEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaxiMed.Wpf.Views.Patients"
        mc:Ignorable="d"
        Title="Пациент"
        Height="930" Width="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FB"
        FontFamily="Segoe UI"
        TextElement.FontSize="13"
        SnapsToDevicePixels="True"
        Icon="/Resources/Image/Image.ico">

    <Window.Resources>
        <!-- Цвета -->
        <Color x:Key="C_Primary">#2563EB</Color>
        <Color x:Key="C_PrimaryDark">#1D4ED8</Color>
        <Color x:Key="C_Text">#0F172A</Color>
        <Color x:Key="C_SubText">#64748B</Color>
        <Color x:Key="C_Border">#E2E8F0</Color>
        <Color x:Key="C_Danger">#DC2626</Color>

        <SolidColorBrush x:Key="B_Primary" Color="{StaticResource C_Primary}"/>
        <SolidColorBrush x:Key="B_PrimaryDark" Color="{StaticResource C_PrimaryDark}"/>
        <SolidColorBrush x:Key="B_Text" Color="{StaticResource C_Text}"/>
        <SolidColorBrush x:Key="B_SubText" Color="{StaticResource C_SubText}"/>
        <SolidColorBrush x:Key="B_Border" Color="{StaticResource C_Border}"/>
        <SolidColorBrush x:Key="B_Danger" Color="{StaticResource C_Danger}"/>

        <DropShadowEffect x:Key="E_CardShadow"
                          BlurRadius="26"
                          ShadowDepth="8"
                          Opacity="0.12"/>

        <!-- Карточка -->
        <Style x:Key="S_Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="#10E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource E_CardShadow}"/>
        </Style>

        <!-- Лейбл поля -->
        <Style x:Key="S_FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource B_SubText}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Текстовое поле -->
        <Style x:Key="S_TextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource B_Primary}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Многострочное поле -->
        <Style x:Key="S_TextBoxMultiline" TargetType="TextBox" BasedOn="{StaticResource S_TextBox}">
            <Setter Property="Height" Value="140"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
        </Style>

        <!-- ComboBox -->
        <Style x:Key="S_ComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
        </Style>

        <!-- DatePicker -->
        <Style x:Key="S_DatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="6,0"/>
        </Style>

        <!-- Кнопки -->
        <Style x:Key="S_ButtonPrimary" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource B_Primary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource B_PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="S_ButtonSecondary" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0B000000"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Border Style="{StaticResource S_Card}" Padding="18">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="{Binding Title}"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource B_Text}"/>
                    <TextBlock Text="Заполните данные пациента и нажмите «Сохранить»"
                               Foreground="{StaticResource B_SubText}"
                               FontSize="12"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Форма -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="14"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 0 -->
                        <RowDefinition Height="14"/>
                        <RowDefinition Height="Auto"/>
                        <!-- 2 -->
                        <RowDefinition Height="14"/>
                        <RowDefinition Height="Auto"/>
                        <!-- 4 -->
                        <RowDefinition Height="14"/>
                        <RowDefinition Height="Auto"/>
                        <!-- 6 -->
                        <RowDefinition Height="14"/>
                        <RowDefinition Height="Auto"/>
                        <!-- 8 (СНИЛС) -->
                        <RowDefinition Height="14"/>
                        <RowDefinition Height="Auto"/>
                        <!-- 10 (Заметки) -->
                        <RowDefinition Height="Auto"/>
                        <!-- 11 (Ошибка) -->
                    </Grid.RowDefinitions>


                    <!-- ЛЕВАЯ КОЛОНКА -->

                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock Text="Фамилия" Style="{StaticResource S_FieldLabel}"/>
                        <TextBox Style="{StaticResource S_TextBox}"
                 Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="0">
                        <TextBlock Text="Отчество" Style="{StaticResource S_FieldLabel}"/>
                        <TextBox Style="{StaticResource S_TextBox}"
                 Text="{Binding MiddleName, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Grid.Column="0">
                        <TextBlock Text="Дата рождения" Style="{StaticResource S_FieldLabel}"/>
                        <DatePicker Style="{StaticResource S_DatePicker}"
                    SelectedDate="{Binding BirthDate}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="6" Grid.Column="0">
                        <TextBlock Text="Email" Style="{StaticResource S_FieldLabel}"/>
                        <TextBox Style="{StaticResource S_TextBox}"
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <!-- Документы (СНИЛС, Паспорт, ОМС) -->
                    <StackPanel Grid.Row="8" Grid.Column="0" Margin="0,10,0,0">

                        <!-- СНИЛС -->
                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                   Text="СНИЛС"
                   Style="{StaticResource S_FieldLabel}"
                   VerticalAlignment="Center"/>

                            <TextBox Grid.Column="1"
                 Style="{StaticResource S_TextBox}"
                 Text="{Binding Snils, UpdateSourceTrigger=PropertyChanged}"
                 MaxLength="14"/>
                        </Grid>

                        <!-- Паспорт -->
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                   Text="Паспорт"
                   Style="{StaticResource S_FieldLabel}"
                   VerticalAlignment="Center"/>

                            <TextBox Grid.Column="1"
                 Style="{StaticResource S_TextBox}"
                 Text="{Binding PassportNumber, UpdateSourceTrigger=PropertyChanged}"
                 MaxLength="11"/>
                        </Grid>

                        <!-- Полис ОМС -->
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                   Text="Полис ОМС"
                   Style="{StaticResource S_FieldLabel}"
                   VerticalAlignment="Center"/>

                            <TextBox Grid.Column="1"
                 Style="{StaticResource S_TextBox}"
                 Text="{Binding OmsPolicyNumber, UpdateSourceTrigger=PropertyChanged}"
                 MaxLength="19"/>
                        </Grid>

                    </StackPanel>

                    <!-- ПРАВАЯ КОЛОНКА -->

                    <StackPanel Grid.Row="0" Grid.Column="2">
                        <TextBlock Text="Имя" Style="{StaticResource S_FieldLabel}"/>
                        <TextBox Style="{StaticResource S_TextBox}"
                 Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="2">
                        <TextBlock Text="Пол" Style="{StaticResource S_FieldLabel}"/>
                        <ComboBox Style="{StaticResource S_ComboBox}"
                  ItemsSource="{Binding SexItems}"
                  SelectedValuePath="Value"
                  DisplayMemberPath="Name"
                  SelectedValue="{Binding Sex}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Grid.Column="2">
                        <TextBlock Text="Телефон" Style="{StaticResource S_FieldLabel}"/>
                        <TextBox Style="{StaticResource S_TextBox}"
                 Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="6" Grid.Column="2">
                        <TextBlock Text="Адрес" Style="{StaticResource S_FieldLabel}"/>
                        <TextBox Style="{StaticResource S_TextBox}"
                 Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>



                    <!-- ЗАМЕТКИ -->

                    <StackPanel Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="3">
                        <TextBlock Text="Заметки" Style="{StaticResource S_FieldLabel}"/>
                        <TextBox Style="{StaticResource S_TextBoxMultiline}"
                 Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>



                    <!-- ОШИБКА -->

                    <Border Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="3"
            Background="#FEF2F2"
            BorderBrush="#FECACA"
            BorderThickness="1"
            CornerRadius="12"
            Padding="10"
            Margin="0,12,0,0">
                        <TextBlock Foreground="{StaticResource B_Danger}"
                   Text="{Binding ErrorText}"
                   TextWrapping="Wrap"/>
                    </Border>

                </Grid>


                <!-- Кнопки -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Отмена"
                            Style="{StaticResource S_ButtonSecondary}"
                            Margin="0,0,10,0"
                            IsCancel="True"/>

                    <Button Content="Сохранить"
                            Style="{StaticResource S_ButtonPrimary}"
                            IsDefault="True"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
