<Page x:Class="MaxiMed.Wpf.Views.Reports.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaxiMed.Wpf.Views.Reports"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Отчёты"
      Background="Transparent">

    <Page.Resources>
        <!-- Цвета -->
        <Color x:Key="C_Primary">#2563EB</Color>
        <Color x:Key="C_PrimaryDark">#1D4ED8</Color>
        <Color x:Key="C_Text">#0F172A</Color>
        <Color x:Key="C_SubText">#64748B</Color>
        <Color x:Key="C_Border">#E2E8F0</Color>

        <SolidColorBrush x:Key="B_Primary" Color="{StaticResource C_Primary}"/>
        <SolidColorBrush x:Key="B_PrimaryDark" Color="{StaticResource C_PrimaryDark}"/>
        <SolidColorBrush x:Key="B_Text" Color="{StaticResource C_Text}"/>
        <SolidColorBrush x:Key="B_SubText" Color="{StaticResource C_SubText}"/>
        <SolidColorBrush x:Key="B_Border" Color="{StaticResource C_Border}"/>

        <DropShadowEffect x:Key="E_CardShadow"
                          BlurRadius="26"
                          ShadowDepth="8"
                          Opacity="0.12"/>

        <!-- Карточка -->
        <Style x:Key="S_Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="#10E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource E_CardShadow}"/>
        </Style>

        <!-- Кнопки -->
        <Style x:Key="S_ButtonPrimary" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource B_Primary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource B_PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="S_ButtonSecondary" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0B000000"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DatePicker -->
        <Style x:Key="S_DatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="6,0"/>
        </Style>

        <!-- TabControl -->
        <Style x:Key="S_TabControl" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource B_SubText}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd"
                                Background="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter
                                ContentSource="Header"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd"
                                        Property="Background"
                                        Value="#EEF2FF"/>
                                <Setter Property="Foreground"
                                        Value="{StaticResource B_Text}"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd"
                                        Property="Background"
                                        Value="#F1F5FF"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground"
                                        Value="#A0A0A0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- DataGrid -->
        <Style x:Key="S_DataGrid" TargetType="DataGrid">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FBFCFE"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="{StaticResource B_SubText}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#0FE2E8F0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E8F0FF"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F5FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ШАПКА СО ВСЕМИ КНОПКАМИ -->
        <Border Grid.Row="0" Style="{StaticResource S_Card}" Padding="14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Отчёты"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource B_Text}"/>
                    <TextBlock Text="Диапазон дат, построение и экспорт в Excel"
                               Foreground="{StaticResource B_SubText}"
                               FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">

                    <TextBlock Text="С"
                               Foreground="{StaticResource B_SubText}"
                               VerticalAlignment="Center"
                               Margin="0,0,6,0"/>
                    <DatePicker Style="{StaticResource S_DatePicker}"
                                Width="150"
                                SelectedDate="{Binding From}"/>

                    <TextBlock Text="По"
                               Foreground="{StaticResource B_SubText}"
                               VerticalAlignment="Center"
                               Margin="10,0,6,0"/>
                    <DatePicker Style="{StaticResource S_DatePicker}"
                                Width="150"
                                SelectedDate="{Binding To}"/>

                    <Button Content="Построить"
                            Style="{StaticResource S_ButtonPrimary}"
                            Margin="12,0,0,0"
                            Command="{Binding LoadCommand}"/>

                    <Button Content="Экспорт выручки"
                            Style="{StaticResource S_ButtonSecondary}"
                            Margin="10,0,0,0"
                            Command="{Binding ExportRevenueCommand}"/>

                    <Button Content="Экспорт визитов"
                            Style="{StaticResource S_ButtonSecondary}"
                            Margin="10,0,0,0"
                            Command="{Binding ExportVisitsCommand}"/>

                    <Button Content="Экспорт по врачам"
                            Style="{StaticResource S_ButtonSecondary}"
                            Margin="10,0,0,0"
                            Command="{Binding ExportDoctorsCommand}"/>
                </StackPanel>
            </Grid>
        </Border>


        <!-- КОНТЕНТ -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- 50 / 50 -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ТАБЛИЦЫ -->
            <Border Grid.Column="0"
        Style="{StaticResource S_Card}"
        Padding="10"
        Margin="0,0,8,0">
                <TabControl Style="{StaticResource S_TabControl}">

                    <!-- Визиты -->
                    <TabItem Header="Визиты">
                        <DataGrid Style="{StaticResource S_DataGrid}"
                      ItemsSource="{Binding Visits}"
                      AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Дата"
                                        Binding="{Binding Date, StringFormat=\{0:dd.MM.yyyy HH:mm\}}"/>
                                <DataGridTextColumn Header="Врач"
                                        Binding="{Binding Doctor}"/>
                                <DataGridTextColumn Header="Пациент"
                                        Binding="{Binding Patient}"/>
                                <DataGridTextColumn Header="Статус"
                                        Binding="{Binding Status}"/>
                                <DataGridTextColumn Header="Сумма"
                                        Binding="{Binding Total, StringFormat=\{0:F2\}}"/>
                                <DataGridTextColumn Header="Оплачено"
                                        Binding="{Binding Paid, StringFormat=\{0:F2\}}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <!-- Выручка -->
                    <TabItem Header="Выручка">
                        <DataGrid Style="{StaticResource S_DataGrid}"
                      ItemsSource="{Binding Revenue}"
                      AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Дата"
                                        Binding="{Binding Date, StringFormat=\{0:dd.MM.yyyy\}}"/>
                                <DataGridTextColumn Header="Всего"
                                        Binding="{Binding Total, StringFormat=\{0:F2\}}"/>
                                <DataGridTextColumn Header="Оплачено"
                                        Binding="{Binding Paid, StringFormat=\{0:F2\}}"/>
                                <DataGridTextColumn Header="Долг"
                                        Binding="{Binding Debt, StringFormat=\{0:F2\}}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <!-- По врачам -->
                    <TabItem Header="По врачам">
                        <DataGrid x:Name="GridDoctors"
                      Style="{StaticResource S_DataGrid}"
                      ItemsSource="{Binding Doctors}"
                      AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Врач"
                                        Binding="{Binding Doctor}"/>
                                <DataGridTextColumn Header="Количество визитов"
                                        Binding="{Binding VisitsCount}"/>
                                <DataGridTextColumn Header="Выручка"
                                        Binding="{Binding Revenue, StringFormat=\{0:F2\}}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <!-- Сводка -->
                    <TabItem Header="Сводка">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="10" Orientation="Vertical">

                                <UniformGrid Columns="3" Margin="0,0,0,10">

                                    <!-- Доход -->
                                    <Border Style="{StaticResource S_Card}" Padding="14" Margin="6">
                                        <StackPanel>
                                            <TextBlock Text="Доход" FontSize="14" Foreground="{StaticResource B_SubText}" />
                                            <TextBlock Text="{Binding Summary.Income, StringFormat=\{0:F2\}}"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource B_Text}" />
                                        </StackPanel>
                                    </Border>

                                    <!-- Расход -->
                                    <Border Style="{StaticResource S_Card}" Padding="14" Margin="6">
                                        <StackPanel>
                                            <TextBlock Text="Расход" FontSize="14" Foreground="{StaticResource B_SubText}" />
                                            <TextBlock Text="{Binding Summary.Expense, StringFormat=\{0:F2\}}"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource B_Text}" />
                                        </StackPanel>
                                    </Border>

                                    <!-- Прибыль -->
                                    <Border Style="{StaticResource S_Card}" Padding="14" Margin="6">
                                        <StackPanel>
                                            <TextBlock Text="Прибыль" FontSize="14" Foreground="{StaticResource B_SubText}" />
                                            <TextBlock Text="{Binding Summary.Profit, StringFormat=\{0:F2\}}"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource B_Text}" />
                                        </StackPanel>
                                    </Border>
                                </UniformGrid>

                                <UniformGrid Columns="3" Margin="0,0,0,10">

                                    <!-- Средний чек -->
                                    <Border Style="{StaticResource S_Card}" Padding="14" Margin="6">
                                        <StackPanel>
                                            <TextBlock Text="Средний чек" FontSize="14" Foreground="{StaticResource B_SubText}" />
                                            <TextBlock Text="{Binding Summary.AvgCheck, StringFormat=\{0:F2\}}"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource B_Text}" />
                                        </StackPanel>
                                    </Border>

                                    <!-- Долги -->
                                    <Border Style="{StaticResource S_Card}" Padding="14" Margin="6">
                                        <StackPanel>
                                            <TextBlock Text="Долги" FontSize="14" Foreground="{StaticResource B_SubText}" />
                                            <TextBlock Text="{Binding Summary.Debts, StringFormat=\{0:F2\}}"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource B_Text}" />
                                        </StackPanel>
                                    </Border>

                                    <!-- Кол-во визитов -->
                                    <Border Style="{StaticResource S_Card}" Padding="14" Margin="6">
                                        <StackPanel>
                                            <TextBlock Text="Кол-во визитов" FontSize="14" Foreground="{StaticResource B_SubText}" />
                                            <TextBlock Text="{Binding Summary.VisitsCount}"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource B_Text}" />
                                        </StackPanel>
                                    </Border>

                                </UniformGrid>

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                </TabControl>
            </Border>


            <!-- ГРАФИКИ -->
            <Border Grid.Column="1"
                    Style="{StaticResource S_Card}"
                    Padding="16"
                    Margin="8,0,0,0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Статистика"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource B_Text}"/>

                        <TextBlock Text="Пациенты, возраст, финансы и визиты"
                                   FontSize="12"
                                   Foreground="{StaticResource B_SubText}"/>
                    </StackPanel>

                    <!-- Вкладки с графиками, все ТВОИ биндинги -->
                    <TabControl Grid.Row="1"
                                Style="{StaticResource S_TabControl}"
                                Margin="0,8,0,0">
                        <!-- Пирог по полу -->
                        <TabItem Header="По полу">
                            <Grid Margin="4">
                                <lvc:PieChart Series="{Binding GenderSeries}"
                                              LegendLocation="Bottom"
                                              MinHeight="220"/>
                            </Grid>
                        </TabItem>

                        <!-- Возрастные группы -->
                        <TabItem Header="Возрастные группы">
                            <Grid Margin="4">
                                <lvc:CartesianChart Series="{Binding AgeSeries}">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Labels="{Binding AgeLabels}"/>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis LabelFormatter="{Binding AgeFormatter}"/>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>

                            </Grid>
                        </TabItem>

                        <!-- Доход / расход -->
                        <TabItem Header="Доход / расход">
                            <Grid Margin="4">
                                <lvc:CartesianChart Series="{Binding FinanceSeries}">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Labels="{Binding FinanceLabels}"/>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis LabelFormatter="{Binding FinanceFormatter}"/>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>

                            </Grid>
                        </TabItem>

                        <!-- Количество визитов -->
                        <TabItem Header="Количество визитов">
                            <Grid Margin="4">
                                <lvc:CartesianChart Series="{Binding VisitsCountSeries}">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Labels="{Binding VisitsLabels}"/>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis LabelFormatter="{Binding VisitsFormatter}"/>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>

                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Page>
