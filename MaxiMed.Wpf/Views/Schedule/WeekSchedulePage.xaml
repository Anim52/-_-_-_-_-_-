<Page x:Class="MaxiMed.Wpf.Views.Schedule.WeekSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaxiMed.Wpf.Views.Schedule"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
        Title="Неделя врача"
      Background="Transparent">

    <Page.Resources>
        <!-- Цвета -->
        <Color x:Key="C_Primary">#2563EB</Color>
        <Color x:Key="C_PrimaryDark">#1D4ED8</Color>
        <Color x:Key="C_Text">#0F172A</Color>
        <Color x:Key="C_SubText">#64748B</Color>
        <Color x:Key="C_Border">#E2E8F0</Color>

        <SolidColorBrush x:Key="B_Primary" Color="{StaticResource C_Primary}"/>
        <SolidColorBrush x:Key="B_PrimaryDark" Color="{StaticResource C_PrimaryDark}"/>
        <SolidColorBrush x:Key="B_Text" Color="{StaticResource C_Text}"/>
        <SolidColorBrush x:Key="B_SubText" Color="{StaticResource C_SubText}"/>
        <SolidColorBrush x:Key="B_Border" Color="{StaticResource C_Border}"/>

        <DropShadowEffect x:Key="E_CardShadow"
                          BlurRadius="26"
                          ShadowDepth="8"
                          Opacity="0.12"/>

        <!-- Карточка -->
        <Style x:Key="S_Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="#10E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource E_CardShadow}"/>
        </Style>

        <!-- Лейбл -->
        <Style x:Key="S_FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource B_SubText}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- ComboBox -->
        <Style x:Key="S_ComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
        </Style>

        <!-- DatePicker -->
        <Style x:Key="S_DatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="6,0"/>
        </Style>

        <!-- Кнопки -->
        <Style x:Key="S_ButtonPrimary" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource B_Primary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource B_PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="S_ButtonSecondary" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0B000000"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Заголовок дня -->
        <Style x:Key="S_DayHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource B_SubText}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,10"/>
        </Style>

        <!-- Метка времени слева -->
        <Style x:Key="S_TimeLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource B_SubText}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,0"/>
        </Style>

        <!-- Ячейка-слот -->
        <!-- Ячейка-слот -->
        <Style x:Key="S_SlotBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#16E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="6"/>
            <!-- по умолчанию фон через конвертер -->
            <Setter Property="Background"
            Value="{Binding IsFree, Converter={StaticResource BoolToFreeBusyBrush}}"/>

            <Style.Triggers>
                <!-- ⚠️ Нерабочий день — серый фон -->
                <DataTrigger Binding="{Binding IsDayOff}" Value="True">
                    <Setter Property="Background" Value="#FFE5E7EB"/>
                    <Setter Property="BorderBrush" Value="#FF9CA3AF"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>


        <!-- Кнопка внутри слота: НЕ задаём Content в атрибуте, только в Style -->
        <Style x:Key="S_SlotButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Content" Value="+"/>
            <Setter Property="ToolTip" Value="Создать запись"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" CornerRadius="8" Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0B000000"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.7"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <!-- уже было: занятый слот -->
                <DataTrigger Binding="{Binding IsFree}" Value="False">
                    <Setter Property="Content" Value="{Binding PatientName}"/>
                    <Setter Property="IsEnabled" Value="False"/>
                    <Setter Property="ToolTip" Value="Занято"/>
                    <Setter Property="FontWeight" Value="Normal"/>
                </DataTrigger>

                <!-- ⚠️ Нерабочий день — особый текст -->
                <DataTrigger Binding="{Binding IsDayOff}" Value="True">
                    <Setter Property="Content" Value="Нерабочий день"/>
                    <Setter Property="IsEnabled" Value="False"/>
                    <Setter Property="ToolTip" Value="Нерабочий день"/>
                    <Setter Property="Foreground" Value="{StaticResource B_SubText}"/>
                    <Setter Property="FontWeight" Value="Normal"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Grid.Row="0" Style="{StaticResource S_Card}" Padding="14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Неделя врача"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource B_Text}"/>
                    <TextBlock Text="Сетка на 7 дней. «+» — создать запись в свободный слот"
                               Foreground="{StaticResource B_SubText}"
                               FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Врач" Style="{StaticResource S_FieldLabel}"/>
                    <ComboBox Style="{StaticResource S_ComboBox}"
                              Width="260"
                              ItemsSource="{Binding Doctors}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedDoctorId}" />

                    <TextBlock Text="Неделя с" Style="{StaticResource S_FieldLabel}" Margin="12,0,6,0"/>
                    <DatePicker Style="{StaticResource S_DatePicker}"
                                Width="160"
                                SelectedDate="{Binding WeekStart}" />

                    <Button Content="Обновить"
                            Style="{StaticResource S_ButtonPrimary}"
                            Margin="12,0,0,0"
                            Command="{Binding LoadCommand}"/>
                    <TextBlock Text="День"
           Style="{StaticResource S_FieldLabel}"
           Margin="12,0,6,0"/>

                    <ComboBox Style="{StaticResource S_ComboBox}"
          Width="140"
          ItemsSource="{Binding Days}"
          SelectedItem="{Binding SelectedDayForDayOff}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock xml:lang="ru-RU"
                       Text="{Binding Path=., StringFormat='{}{0:ddd dd.MM}'}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button Content="Отметить день как нерабочий"
        Command="{Binding SetDayOffCommand}"
        Visibility="{Binding CanSetDayOff, Converter={StaticResource BoolToVisibility}}"
        Margin="10,0,10,0"
        Style="{StaticResource S_ButtonPrimary}"/>


                    <Button Content="Экспорт Excel"
                            Style="{StaticResource S_ButtonSecondary}"
                            Margin="10,0,0,0"
                            Command="{Binding ExportExcelCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Таблица -->
        <Border Grid.Row="2" Style="{StaticResource S_Card}" Padding="14">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Заголовок дней -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- пусто над временем -->
                        <TextBlock Grid.Column="0"/>

                        <!-- 7 колонок с датами текущей недели -->
                        <ItemsControl Grid.Column="1"
                  ItemsSource="{Binding Days}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="7"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel HorizontalAlignment="Center">
                                        <!-- День недели: пн, вт... -->
                                        <TextBlock Text="{Binding Path=., StringFormat='{}{0:ddd}'}"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource B_SubText}"
                               HorizontalAlignment="Center"/>

                                        <!-- Дата: 12.01 -->
                                        <TextBlock Text="{Binding Path=., StringFormat='{}{0:dd.MM}'}"
                               FontWeight="Bold"
                               Foreground="{StaticResource B_Text}"
                               HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                    <!-- Строки -->
                    <ItemsControl ItemsSource="{Binding Rows}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Style="{StaticResource S_TimeLabel}"
                                               Text="{Binding Time}"/>

                                    <ItemsControl Grid.Column="1"
                                                  ItemsSource="{Binding Slots}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Columns="7"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource S_SlotBorder}"
                                                        Background="{Binding IsFree, Converter={StaticResource BoolToFreeBusyBrush}}">
                                                    <Button Style="{StaticResource S_SlotButton}"
                                                            Command="{Binding DataContext.AddFromSlotCommand,
                                                                              RelativeSource={RelativeSource AncestorType=Page}}"
                                                            CommandParameter="{Binding}"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
