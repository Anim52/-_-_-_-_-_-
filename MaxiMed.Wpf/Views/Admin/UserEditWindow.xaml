<Window x:Class="MaxiMed.Wpf.Views.Admin.UserEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaxiMed.Wpf.Views.Admin"
        mc:Ignorable="d"
        Title="Пользователь"
        Height="660"
        Width="620"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FB"
        FontFamily="Segoe UI"
        TextElement.FontSize="13"
        SnapsToDevicePixels="True"
        Icon="/Resources/Image/Image.ico">

    <Window.Resources>
        <Color x:Key="C_Primary">#2563EB</Color>
        <Color x:Key="C_PrimaryDark">#1D4ED8</Color>
        <Color x:Key="C_Text">#0F172A</Color>
        <Color x:Key="C_SubText">#64748B</Color>
        <Color x:Key="C_Border">#E2E8F0</Color>
        <Color x:Key="C_Danger">#DC2626</Color>

        <SolidColorBrush x:Key="B_Primary" Color="{StaticResource C_Primary}"/>
        <SolidColorBrush x:Key="B_PrimaryDark" Color="{StaticResource C_PrimaryDark}"/>
        <SolidColorBrush x:Key="B_Text" Color="{StaticResource C_Text}"/>
        <SolidColorBrush x:Key="B_SubText" Color="{StaticResource C_SubText}"/>
        <SolidColorBrush x:Key="B_Border" Color="{StaticResource C_Border}"/>
        <SolidColorBrush x:Key="B_Danger" Color="{StaticResource C_Danger}"/>

        <DropShadowEffect x:Key="E_CardShadow" BlurRadius="26" ShadowDepth="8" Opacity="0.12"/>

        <Style x:Key="S_Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="#10E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource E_CardShadow}"/>
        </Style>

        <Style x:Key="S_Label" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource B_SubText}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="S_TextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource B_Primary}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="S_CheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="S_RoleCheck" TargetType="CheckBox" BasedOn="{StaticResource S_CheckBox}">
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
        </Style>

        <Style x:Key="S_ButtonPrimary" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource B_Primary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource B_PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="S_ButtonSecondary" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0B000000"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Style="{StaticResource S_Card}" Padding="14">
            <StackPanel>
                <TextBlock Text="Пользователь"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource B_Text}"/>
                <TextBlock Text="Логин, ФИО, роли и пароль"
                           FontSize="12"
                           Foreground="{StaticResource B_SubText}"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Контент -->
        <Border Grid.Row="2" Style="{StaticResource S_Card}" Padding="14">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <TextBlock Text="Логин" Style="{StaticResource S_Label}"/>
                    <TextBox Style="{StaticResource S_TextBox}"
                             Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="ФИО" Style="{StaticResource S_Label}"/>
                    <TextBox Style="{StaticResource S_TextBox}"
                             Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,10"/>

                    <CheckBox Content="Активен"
                              Style="{StaticResource S_CheckBox}"
                              IsChecked="{Binding IsActive}"
                              Margin="0,0,0,14"/>

                    <TextBlock Text="Роли" FontWeight="SemiBold" Foreground="{StaticResource B_Text}"/>
                    <TextBlock Text="Отметьте роли пользователя" Style="{StaticResource S_Label}" Margin="0,2,0,8"/>

                    <Border BorderBrush="#10E2E8F0" BorderThickness="1" CornerRadius="12" Padding="10" Margin="0,0,0,14">
                        <ItemsControl ItemsSource="{Binding Roles}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}"
                                              Style="{StaticResource S_RoleCheck}"
                                              IsChecked="{Binding IsSelected}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>

                    <TextBlock Text="Новый пароль" Style="{StaticResource S_Label}"/>

                    <Border BorderBrush="{StaticResource B_Border}" BorderThickness="1" CornerRadius="10" Background="{DynamicResource CardBrush}" Margin="0,0,0,8">
                        <PasswordBox x:Name="Pwd" Padding="12,8" BorderThickness="0" Background="Transparent"/>
                    </Border>

                    <Border Background="#FFF7ED"
                            BorderBrush="#FED7AA"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="10"
                            Visibility="{Binding IsCreateMode, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="Пароль обязателен при создании"
                                   Foreground="#9A3412"
                                   TextWrapping="Wrap"/>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Низ -->
        <Border Grid.Row="4" Style="{StaticResource S_Card}" Padding="12">
            <DockPanel>
                <TextBlock Text="{Binding ErrorText}"
                           Foreground="{StaticResource B_Danger}"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"
                           TextWrapping="Wrap"/>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button Content="Закрыть"
                            Style="{StaticResource S_ButtonSecondary}"
                            Margin="0,0,10,0"
                            IsCancel="True"/>
                    <Button Content="Сохранить"
                            Style="{StaticResource S_ButtonPrimary}"
                            IsDefault="True"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>
            </DockPanel>
        </Border>

    </Grid>
</Window>
