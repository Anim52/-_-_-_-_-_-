<Page x:Class="MaxiMed.Wpf.Views.Admin.AuditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaxiMed.Wpf.Views.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Аудит"
      Background="Transparent">

    <Page.Resources>
        <!-- Цвета -->
        <Color x:Key="C_Primary">#2563EB</Color>
        <Color x:Key="C_PrimaryDark">#1D4ED8</Color>
        <Color x:Key="C_Text">#0F172A</Color>
        <Color x:Key="C_SubText">#64748B</Color>
        <Color x:Key="C_Border">#E2E8F0</Color>
        <Color x:Key="C_Danger">#DC2626</Color>

        <SolidColorBrush x:Key="B_Primary" Color="{StaticResource C_Primary}"/>
        <SolidColorBrush x:Key="B_PrimaryDark" Color="{StaticResource C_PrimaryDark}"/>
        <SolidColorBrush x:Key="B_Text" Color="{StaticResource C_Text}"/>
        <SolidColorBrush x:Key="B_SubText" Color="{StaticResource C_SubText}"/>
        <SolidColorBrush x:Key="B_Border" Color="{StaticResource C_Border}"/>
        <SolidColorBrush x:Key="B_Danger" Color="{StaticResource C_Danger}"/>

        <DropShadowEffect x:Key="E_CardShadow" BlurRadius="26" ShadowDepth="8" Opacity="0.12"/>

        <Style x:Key="S_Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="#10E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource E_CardShadow}"/>
        </Style>

        <Style x:Key="S_Label" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource B_SubText}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="S_TextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource B_Primary}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="S_DatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="6,0"/>
        </Style>

        <Style x:Key="S_ButtonPrimary" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource B_Primary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource B_PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid -->
        <Style x:Key="S_DataGrid" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FBFCFE"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="{StaticResource B_SubText}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#0FE2E8F0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E8F0FF"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F5FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="240"/>
        </Grid.RowDefinitions>

        <!-- Фильтры -->
        <Border Grid.Row="0" Style="{StaticResource S_Card}" Padding="14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="Аудит"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource B_Text}"/>
                    <TextBlock Text="Фильтры по дате, действию, сущности и тексту"
                               FontSize="12"
                               Foreground="{StaticResource B_SubText}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <DatePicker Grid.Column="0" Style="{StaticResource S_DatePicker}" SelectedDate="{Binding FromDate}"/>
                    <DatePicker Grid.Column="2" Style="{StaticResource S_DatePicker}" SelectedDate="{Binding ToDate}"/>

                    <TextBox Grid.Column="4" Style="{StaticResource S_TextBox}" Text="{Binding ActionText}" />
                    <TextBox Grid.Column="6" Style="{StaticResource S_TextBox}" Text="{Binding EntityText}" />
                    <TextBox Grid.Column="8" Style="{StaticResource S_TextBox}" Text="{Binding SearchText}" />

                    <Button Grid.Column="10"
                            Content="Загрузить"
                            Style="{StaticResource S_ButtonPrimary}"
                            Command="{Binding LoadCommand}"/>
                </Grid>

                <!-- Подписи над полями (чтобы было понятно что где) -->
                <Grid Grid.Row="3" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="С" Style="{StaticResource S_Label}"/>
                    <TextBlock Grid.Column="2" Text="По" Style="{StaticResource S_Label}"/>
                    <TextBlock Grid.Column="4" Text="Action" Style="{StaticResource S_Label}"/>
                    <TextBlock Grid.Column="6" Text="Entity" Style="{StaticResource S_Label}"/>
                    <TextBlock Grid.Column="8" Text="Текст" Style="{StaticResource S_Label}"/>
                </Grid>

                <TextBlock Grid.Row="3"
                           Text="{Binding ErrorText}"
                           Foreground="{StaticResource B_Danger}"
                           Margin="0,30,0,0"
                           TextWrapping="Wrap"/>
            </Grid>
        </Border>

        <!-- Таблица -->
        <Border Grid.Row="2" Style="{StaticResource S_Card}" Padding="0">
            <DataGrid Style="{StaticResource S_DataGrid}"
                      ItemsSource="{Binding Items}"
                      SelectedItem="{Binding Selected}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата"
                                        Binding="{Binding At, StringFormat={}{0:dd.MM.yyyy HH:mm:ss}}"
                                        Width="190"/>
                    <DataGridTextColumn Header="Пользователь" Binding="{Binding UserLogin}" Width="160"/>
                    <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="180"/>
                    <DataGridTextColumn Header="Entity" Binding="{Binding Entity}" Width="180"/>
                    <DataGridTextColumn Header="EntityId" Binding="{Binding EntityId}" Width="130"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- DetailsJson -->
        <Border Grid.Row="4" Style="{StaticResource S_Card}" Padding="14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="DetailsJson" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource B_Text}"/>
                    <TextBlock Text="Детали выбранной записи" FontSize="12" Foreground="{StaticResource B_SubText}"/>
                </StackPanel>

                <Border Grid.Row="2" BorderBrush="#10E2E8F0" BorderThickness="1" CornerRadius="12" Padding="0">
                    <TextBox Text="{Binding Selected.DetailsJson}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             IsReadOnly="True"
                             BorderThickness="0"
                             Background="Transparent"
                             Padding="12"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
