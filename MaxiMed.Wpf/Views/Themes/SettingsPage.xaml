<Page x:Class="MaxiMed.Wpf.Views.Themes.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaxiMed.Wpf.Views.Themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <ScrollViewer>
        <StackPanel Margin="24" Width="520">

            <TextBlock Text="Настройки"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimary}"
                       Margin="0 0 0 16"/>

            <Border Style="{StaticResource Card}" Margin="0 0 0 16">
                <StackPanel>
                    <TextBlock Text="Внешний вид"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimary}"
                               Margin="0 0 0 12"/>

                    <DockPanel Margin="0 0 0 8">
                        <TextBlock Text="Тёмная тема"
                                   Foreground="{DynamicResource TextPrimary}"
                                   VerticalAlignment="Center"/>
                        <CheckBox DockPanel.Dock="Right"
                                  IsChecked="{Binding IsDarkTheme}"/>
                    </DockPanel>

                    <TextBlock Text="Акцентный цвет"
                               Foreground="{DynamicResource TextSecondary}"
                               Margin="0 8 0 4"/>

                    <ComboBox ItemsSource="{Binding Accents}"
                              SelectedItem="{Binding SelectedAccent}"
                              Height="36"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Поведение"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimary}"
                               Margin="0 0 0 12"/>

                    <CheckBox Content="Включить анимации"
          IsChecked="{Binding AnimationsEnabled}"
          Foreground="{DynamicResource TextPrimary}" />

                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
