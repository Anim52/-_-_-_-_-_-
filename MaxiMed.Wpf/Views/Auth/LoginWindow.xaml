<Window x:Class="MaxiMed.Wpf.Views.Auth.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Вход в MaxiMed"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="1020"
Height="580"
SizeToContent="Manual"

        Background="{DynamicResource BgBrush}"
        FontFamily="Segoe UI"
        TextElement.FontSize="13"
        SnapsToDevicePixels="True"
        Icon="/Resources/Image/Image.ico">

    <Window.Resources>
        <!-- Shadow -->
        <DropShadowEffect x:Key="E_CardShadow"
                          BlurRadius="34"
                          ShadowDepth="14"
                          Opacity="0.18"/>

        <!-- Eye icons (vector, no emoji artifacts) -->
        <Geometry x:Key="I_Eye">
            M12,5 C6,5 2,12 2,12 C2,12 6,19 12,19 C18,19 22,12 22,12 C22,12 18,5 12,5 Z
            M12,9 A3,3 0 1 0 12.001,9 Z
        </Geometry>

        <Geometry x:Key="I_EyeOff">
            M3,4 L21,20
            M9.5,9.5 A3,3 0 0 0 14.5,14.5
            M12,5 C6,5 2,12 2,12 C2,12 6,19 12,19 C18,19 22,12 22,12 C22,12 18,5 12,5
        </Geometry>

        <Style x:Key="S_IconPath" TargetType="Path">
            <Setter Property="Stroke" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="StrokeThickness" Value="1.8"/>
            <Setter Property="StrokeStartLineCap" Value="Round"/>
            <Setter Property="StrokeEndLineCap" Value="Round"/>
            <Setter Property="StrokeLineJoin" Value="Round"/>
            <Setter Property="Fill" Value="Transparent"/>
        </Style>

        <!-- Icon button -->
        <Style x:Key="S_IconBtn" TargetType="Button">
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource ControlBgHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary button -->
        <Style x:Key="S_PrimaryBtn" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" CornerRadius="12" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentBrushHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary button -->
        <Style x:Key="S_SecondaryBtn" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Background" Value="{DynamicResource ControlBg}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrushHard}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource ControlBgHover}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Default text -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
        </Style>
    </Window.Resources>

    <!-- Background -->
    <Grid Background="{DynamicResource BgBrush}">
        <!-- subtle “glow” blobs -->
        <Ellipse Width="520" Height="520"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="-170,-190,0,0"
                 Fill="{DynamicResource AccentSoftBrush}"/>

        <Ellipse Width="620" Height="620"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Bottom"
                 Margin="0,0,-220,-240"
                 Fill="#22FFFFFF"/>

        <!-- Card -->
        <Border x:Name="Card"
                Width="900"
                CornerRadius="18"
                Background="{DynamicResource CardBrush}"
                BorderBrush="{DynamicResource BorderBrushHard}"
                BorderThickness="1"
                Effect="{StaticResource E_CardShadow}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="0">

            <Border.RenderTransform>
                <TranslateTransform Y="0"/>
            </Border.RenderTransform>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1"/>
                    <ColumnDefinition Width="360"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT: welcome -->
                <StackPanel Grid.Column="0" Margin="28,26,22,26">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="46" Height="46" CornerRadius="14"
                                Background="{DynamicResource AccentSoftBrush}">
                            <Image Source="/Resources/Image/Image.png"
                                   Stretch="Uniform"
                                   Margin="10"/>
                        </Border>
                        <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="С возвращением!"
                                       FontSize="22"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimary}"/>
                            <TextBlock Text="Рады видеть вас снова в MaxiMed"
                                       Margin="0,4,0,0"
                                       Foreground="{DynamicResource TextSecondary}"/>
                        </StackPanel>
                    </StackPanel>

                    <Border CornerRadius="14"
                            Background="{DynamicResource ControlBg}"
                            BorderBrush="{DynamicResource BorderBrushHard}"
                            BorderThickness="1"
                            Padding="14"
                            Margin="0,18,0,12">
                        <StackPanel>
                            <TextBlock Text="Что вы можете сделать после входа:"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"
                                       Foreground="{DynamicResource TextPrimary}"/>
                            <TextBlock Text="• Запись пациентов и расписание врачей" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,6"/>
                            <TextBlock Text="• Электронная карта, визиты, услуги" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,6"/>
                            <TextBlock Text="• Отчёты, администрирование и роли" Foreground="{DynamicResource TextSecondary}"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="14"
        Background="{DynamicResource ControlBg}"
        BorderBrush="{DynamicResource BorderBrushHard}"
        BorderThickness="1"
        Padding="14"
        Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Статус системы"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"
                   Foreground="{DynamicResource TextPrimary}"/>

                            <DockPanel Margin="0,0,0,6">
                                <TextBlock Text="• API:" Foreground="{DynamicResource TextSecondary}"/>
                                <TextBlock Text=" online" Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold"/>
                            </DockPanel>

                            <DockPanel Margin="0,0,0,6">
                                <TextBlock Text="• База данных:" Foreground="{DynamicResource TextSecondary}"/>
                                <TextBlock Text=" подключена" Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold"/>
                            </DockPanel>

                            <TextBlock Text="Если вход не удаётся — обратитесь к администратору."
                   Foreground="{DynamicResource TextSecondary}"
                   Margin="0,6,0,0"
                   TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Подсказка: Enter — вход"
                               Foreground="{DynamicResource TextSecondary}"
                               FontSize="12"/>
                </StackPanel>

                <!-- Divider -->
                <Border Grid.Column="1"
                        Background="{DynamicResource BorderBrushHard}"
                        Opacity="0.55"
                        Margin="0,20"/>

                <!-- RIGHT: form -->
                <Grid Grid.Column="2" Margin="22,26,28,26">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="18"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Вход"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"/>
                        <TextBlock Text="Введите логин и пароль"
                                   Margin="0,4,0,0"
                                   Foreground="{DynamicResource TextSecondary}"/>
                    </StackPanel>

                    <!-- Login -->
                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Логин"
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="2,0,0,6"/>

                        <Border CornerRadius="12"
                                Background="{DynamicResource ControlBg}"
                                BorderBrush="{DynamicResource BorderBrushHard}"
                                BorderThickness="1"
                                Height="44">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsKeyboardFocusWithin, ElementName=LoginBox}" Value="True">
                                            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <TextBox x:Name="LoginBox"
                                     Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="{DynamicResource TextPrimary}"
                                     Padding="12,0"
                                     VerticalContentAlignment="Center"
                                     FontSize="13.5"/>
                        </Border>
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel Grid.Row="4">
                        <TextBlock Text="Пароль"
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="2,0,0,6"/>

                        <Grid>
                            <!-- PasswordBox -->
                            <Border x:Name="PwdWrap"
                                    CornerRadius="12"
                                    Background="{DynamicResource ControlBg}"
                                    BorderBrush="{DynamicResource BorderBrushHard}"
                                    BorderThickness="1"
                                    Height="44">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsKeyboardFocusWithin, ElementName=Pwd}" Value="True">
                                                <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="44"/>
                                    </Grid.ColumnDefinitions>

                                    <PasswordBox x:Name="Pwd"
                                                 Grid.Column="0"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Foreground="{DynamicResource TextPrimary}"
                                                 Padding="12,0"
                                                 VerticalContentAlignment="Center"
                                                 FontSize="13.5"/>

                                    <Button Grid.Column="1"
                                            Style="{StaticResource S_IconBtn}"
                                            Click="OnTogglePassword">
                                        <Path Data="{StaticResource I_Eye}" Style="{StaticResource S_IconPath}"/>
                                    </Button>
                                </Grid>
                            </Border>

                            <!-- TextBox show password -->
                            <Border x:Name="PwdTextWrap"
                                    CornerRadius="12"
                                    Background="{DynamicResource ControlBg}"
                                    BorderBrush="{DynamicResource BorderBrushHard}"
                                    BorderThickness="1"
                                    Height="44"
                                    Visibility="Collapsed">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsKeyboardFocusWithin, ElementName=PwdText}" Value="True">
                                                <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="44"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox x:Name="PwdText"
                                             Grid.Column="0"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Foreground="{DynamicResource TextPrimary}"
                                             Padding="12,0"
                                             VerticalContentAlignment="Center"
                                             FontSize="13.5"/>

                                    <Button Grid.Column="1"
                                            Style="{StaticResource S_IconBtn}"
                                            Click="OnTogglePassword">
                                        <Path Data="{StaticResource I_EyeOff}" Style="{StaticResource S_IconPath}"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </Grid>
                    </StackPanel>

                    <!-- Error (requires HasError in VM) -->
                    <Border Grid.Row="6"
                            Padding="10"
                            CornerRadius="12"
                            Background="#22DC2626"
                            BorderBrush="#55DC2626"
                            BorderThickness="1"
                            Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}">
                        <DockPanel>
                            <TextBlock Text="!"
                                       FontWeight="Bold"
                                       Margin="0,0,8,0"
                                       Foreground="#FFDC2626"/>
                            <TextBlock Text="{Binding ErrorText}"
                                       Foreground="#FFFEE2E2"
                                       TextWrapping="Wrap"/>
                        </DockPanel>
                    </Border>

                    <!-- Buttons -->
                    <Grid Grid.Row="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="2"
                                Content="Войти"
                                Style="{StaticResource S_PrimaryBtn}"
                                Command="{Binding LoginCommand}"
                                Click="OnLoginClick"/>

                        <Button Grid.Column="4"
                                Content="Отмена"
                                Style="{StaticResource S_SecondaryBtn}"
                                Click="OnCancelClick"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
