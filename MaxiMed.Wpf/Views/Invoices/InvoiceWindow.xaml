<Window x:Class="MaxiMed.Wpf.Views.Invoices.InvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaxiMed.Wpf.Views.Invoices"
        xmlns:lookups="clr-namespace:MaxiMed.Domain.Lookups;assembly=MaxiMed.Domain"
      
        mc:Ignorable="d"
       Title="Счёт"
        Height="780"
        Width="1020"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FB"
        FontFamily="Segoe UI"
        TextElement.FontSize="13"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <!-- Цвета -->
        <Color x:Key="C_Primary">#2563EB</Color>
        <Color x:Key="C_PrimaryDark">#1D4ED8</Color>
        <Color x:Key="C_Text">#0F172A</Color>
        <Color x:Key="C_SubText">#64748B</Color>
        <Color x:Key="C_Border">#E2E8F0</Color>
        <Color x:Key="C_Danger">#DC2626</Color>

        <SolidColorBrush x:Key="B_Primary" Color="{StaticResource C_Primary}"/>
        <SolidColorBrush x:Key="B_PrimaryDark" Color="{StaticResource C_PrimaryDark}"/>
        <SolidColorBrush x:Key="B_Text" Color="{StaticResource C_Text}"/>
        <SolidColorBrush x:Key="B_SubText" Color="{StaticResource C_SubText}"/>
        <SolidColorBrush x:Key="B_Border" Color="{StaticResource C_Border}"/>
        <SolidColorBrush x:Key="B_Danger" Color="{StaticResource C_Danger}"/>

        <DropShadowEffect x:Key="E_CardShadow"
                          BlurRadius="26"
                          ShadowDepth="8"
                          Opacity="0.12"/>
        <!-- DatePicker -->
        <Style x:Key="S_DatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
        </Style>


        <!-- Карточка -->
        <Style x:Key="S_Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="#10E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource E_CardShadow}"/>
        </Style>

        <!-- Заголовки секций -->
        <Style x:Key="S_SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
        </Style>

        <Style x:Key="S_SectionSub" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource B_SubText}"/>
        </Style>

        <!-- KPI -->
        <Style x:Key="S_KpiTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource B_SubText}"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style x:Key="S_KpiValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>

        <!-- TextBox -->
        <Style x:Key="S_TextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource B_Primary}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox -->
        <Style x:Key="S_ComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
        </Style>

        <!-- Кнопки -->
        <Style x:Key="S_ButtonPrimary" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource B_Primary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource B_PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="S_ButtonSecondary" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0B000000"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="S_ButtonDanger" TargetType="Button" BasedOn="{StaticResource S_ButtonSecondary}">
            <Setter Property="Foreground" Value="#B91C1C"/>
            <Setter Property="BorderBrush" Value="#FECACA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#10DC2626"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1ADC2626"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid -->
        <Style x:Key="S_DataGrid" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FBFCFE"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="{StaticResource B_SubText}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="{StaticResource B_Border}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#0FE2E8F0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E8F0FF"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F5FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource B_Text}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Итоги -->
        <Border Grid.Row="0" Style="{StaticResource S_Card}" Padding="14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0">
                    <TextBlock Text="Счёт"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource B_Text}"/>
                    <TextBlock DockPanel.Dock="Right"
                               Text="Итоги и платежи"
                               Foreground="{StaticResource B_SubText}"
                               FontSize="12"
                               VerticalAlignment="Bottom"/>
                </DockPanel>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Итого" Style="{StaticResource S_KpiTitle}"/>
                        <TextBlock Text="{Binding TotalAmount}" Style="{StaticResource S_KpiValue}"/>
                    </StackPanel>

                    

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Оплачено" Style="{StaticResource S_KpiTitle}"/>
                        <TextBlock Text="{Binding PaidAmount}" Style="{StaticResource S_KpiValue}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3">
                        <TextBlock Text="К оплате" Style="{StaticResource S_KpiTitle}"/>
                        <TextBlock Text="{Binding DueAmount}" Style="{StaticResource S_KpiValue}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Позиции -->
        <Border Grid.Row="2" Style="{StaticResource S_Card}" Padding="14">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                    <TextBlock Text="Позиции счёта" Style="{StaticResource S_SectionTitle}"/>
                    <TextBlock Text="Список услуг в счёте" Style="{StaticResource S_SectionSub}"/>
                </StackPanel>

                <Border BorderBrush="#10E2E8F0" BorderThickness="1" CornerRadius="12" Padding="0">
                    <DataGrid Style="{StaticResource S_DataGrid}"
                              ItemsSource="{Binding Items}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Услуга" Binding="{Binding ServiceName}" Width="*"/>
                            <DataGridTextColumn Header="Кол-во" Binding="{Binding Qty}" Width="90"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="140"/>
                            <DataGridTextColumn Header="Сумма" Binding="{Binding LineTotal}" Width="160"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </DockPanel>
        </Border>

        <!-- Платёж -->
        <Border Grid.Row="4" Style="{StaticResource S_Card}" Padding="14">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                    <TextBlock Text="Платёж" Style="{StaticResource S_SectionTitle}"/>
                    <TextBlock Text="Добавьте сумму и способ оплаты" Style="{StaticResource S_SectionSub}"/>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>


                    <ComboBox Grid.Column="0"
                              Style="{StaticResource S_ComboBox}"
                              SelectedItem="{Binding PaymentMethod}">
                        <ComboBox.ItemsSource>
                            <x:Array Type="{x:Type lookups:PaymentMethod}">
                                <lookups:PaymentMethod>Cash</lookups:PaymentMethod>
                                <lookups:PaymentMethod>Card</lookups:PaymentMethod>
                                <lookups:PaymentMethod>BankTransfer</lookups:PaymentMethod>
                            </x:Array>
                        </ComboBox.ItemsSource>
                    </ComboBox>

                    <TextBox Grid.Column="2"
                             Style="{StaticResource S_TextBox}"
                             Text="{Binding PaymentAmount, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBox Grid.Column="4"
                             Style="{StaticResource S_TextBox}"
                             Text="{Binding PaymentNote, UpdateSourceTrigger=PropertyChanged}"/>

                    <Button Grid.Column="6"
                            Content="Добавить"
                            Style="{StaticResource S_ButtonPrimary}"
                            Command="{Binding AddPaymentCommand}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="0,8,0,0"
                               Foreground="{StaticResource B_SubText}"
                               Text="Дата оплаты"/>
                    <DatePicker Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3"
                                Style="{StaticResource S_DatePicker}"
                                Margin="0,8,0,0"
                                SelectedDate="{Binding PaymentDate}"/>

                </Grid>
            </DockPanel>
        </Border>

        <!-- Платежи -->
        <!-- Платежи -->
        <Border Grid.Row="6" Style="{StaticResource S_Card}" Padding="14">
            <DockPanel>
                <DockPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Платежи" Style="{StaticResource S_SectionTitle}"/>
                        <TextBlock Text="История оплат по счёту" Style="{StaticResource S_SectionSub}"/>
                    </StackPanel>

                    <Button DockPanel.Dock="Right"
                    Content="Удалить выбранный"
                    Style="{StaticResource S_ButtonDanger}"
                    Command="{Binding DeletePaymentCommand}"/>
                </DockPanel>

                <!-- Редактирование даты выбранного платежа -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Foreground="{StaticResource B_SubText}"
                       Text="Дата выбранного платежа"/>

                    <DatePicker Grid.Column="2"
                        Style="{StaticResource S_DatePicker}"
                        SelectedDate="{Binding SelectedPaymentDate}"/>

                    <Button Grid.Column="4"
                    Content="Сохранить дату"
                    Style="{StaticResource S_ButtonSecondary}"
                    Command="{Binding UpdateSelectedPaymentDateCommand}"/>
                </Grid>

                <Border BorderBrush="#10E2E8F0" BorderThickness="1" CornerRadius="12" Padding="0">
                    <DataGrid Style="{StaticResource S_DataGrid}"
                      ItemsSource="{Binding Payments}"
                      SelectedItem="{Binding SelectedPayment}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Дата"
                                        Binding="{Binding PaidAt, StringFormat={}{0:dd.MM.yyyy HH:mm}}"
                                        Width="180"/>
                            <DataGridTextColumn Header="Метод" Binding="{Binding Method}" Width="140"/>
                            <DataGridTextColumn Header="Сумма" Binding="{Binding Amount}" Width="140"/>
                            <DataGridTextColumn Header="Комментарий" Binding="{Binding Note}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </DockPanel>
        </Border>

        <!-- Низ: ошибка + закрыть -->
        <Border Grid.Row="8" Style="{StaticResource S_Card}" Padding="12">
            <DockPanel>
                <TextBlock Text="{Binding ErrorText}"
                           Foreground="{StaticResource B_Danger}"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"/>

                <Button DockPanel.Dock="Right"
                        Content="Закрыть"
                        Style="{StaticResource S_ButtonSecondary}"
                        IsCancel="True"/>
            </DockPanel>
        </Border>

    </Grid>
</Window>
